<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:gravity="center_horizontal">
  
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textSize="9pt"
  android:layout_margin="10px"
  android:text="Is this your current location?" />
  		
  <com.google.android.maps.MapView 
        android:id="@+id/confirmLocationMap"
        android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_weight="1"
  		android:layout_margin="10px"
        android:enabled="true"
        android:clickable="false"
        android:apiKey="0VA24ZIeDjEl4gOtgk8VvYQ0XlzbOKHXc1_XJ7A"
        />
  <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:gravity="center_horizontal">
  	<Button android:id="@+id/confirmLocationYesBtn"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="Yes" />
  	<Button android:id="@+id/confirmLocationNoBtn"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="No" />
  </LinearLayout>      
</LinearLayout>
