<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout android:id="@+id/MoodReadingLayout"
		android:layout_width="fill_parent" android:layout_height="100px">
		<Button android:layout_centerInParent="true" android:id="@+id/NewReadingBtn"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="Click to enter new MoodReading" />
		<SlidingDrawer android:layout_height="100px"
			android:layout_width="fill_parent" android:handle="@+id/handle"
			android:content="@+id/content" android:id="@+id/moodSlider"
			android:orientation="horizontal">
			<ImageView android:layout_width="0px"
				android:layout_height="0px" android:id="@id/handle" />
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="100px" android:id="@id/content"
				android:background="#000000">
				<SeekBar android:id="@+id/SeekBar01" android:max="256"
					android:layout_width="fill_parent" android:layout_margin="10px"
					android:layout_height="wrap_content" android:layout_gravity="center" />
			</LinearLayout>
		</SlidingDrawer>
	</RelativeLayout>
	<TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="*">
		<TableRow android:gravity="center_horizontal">
			<Button android:id="@+id/startServiceBtn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="start service" android:layout_gravity="right" />
			<Button android:id="@+id/stopServiceBtn" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="stop service"
				android:layout_gravity="left" />
		</TableRow>
		<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="La la Text" 
				android:layout_gravity="right" />
			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/mapViewButton"
				android:text="See Map" android:layout_gravity="left" />
		</TableRow>
	</TableLayout>
</LinearLayout>



